<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

    <div class="container-fluid contact contact-show">
        <div>

          <img class="show-photo" src="/images/photo/<%= contact.class %>_<%=contact.name%>.png">

        </div>
        <h2><%= contact.class %>기 <%= contact.name%></h2>
        <div>
          <tabel>
            <tr>
              <td><a href="sms:<%= contact.phone %>"><img src="/images/sms.png"></a></td>
              <td></td>
              <td><a href="tel:<%= contact.phone %>"><img src="/images/phone-call.png"></a></td>
            </tr>
          </table>
        </div>
        <div>
          <label>tel. : </label><span><%= contact.phone %></span>
        </div>
        <div>
          <label>e-mail : </label><a href="mailto:<%= contact.email %>"><span><%= contact.email %></span></a>
        </div>
        <div>
          <label>교회 : </label><span><%= contact.church %></span>
        </div>
        <div>
          <label>학교 : </label><span><%= contact.school %> <%= contact.major %></span>
        </div>
        <div>
          <label>소속 : </label><span><%= contact.now %></span>
        </div>
        <div>
          <label>지역 : </label><span><%= contact.location %></span>
        </div>
